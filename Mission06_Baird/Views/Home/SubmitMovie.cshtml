@using Mission07_Baird.Models
@model Mission06_Baird.Models.MovieSubmission


<div style="text-align: center;">
    <h1>Movie Submission</h1>
    <form method="post">
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />

        <label asp-for="Title">*Title</label>
        <input asp-for="Title" type="text"/>
        <br />
        <label asp-for="Year">*Year</label>
        <input asp-for="Year" type="number" pattern="[0-9]{4}" required min="1000" max="9999" />
        <br />

        <label asp-for="Director">*Director</label>
        <input asp-for="Director" type="text" required />
        <br />


        <label asp-for="Rating">*Rating</label>
        <select asp-for="Rating" required>
            <option value="">Select Rating</option>
            <option value="NR">NR</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value="">Select Option</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" type="text" />
        <br />

        <label asp-for="Notes">Notes (max 25 characters)</label>
        <input asp-for="Notes" type="text" maxlength="25" />
        <br />

        <button type="submit">Submit Movie</button>
    </form>
</div>
